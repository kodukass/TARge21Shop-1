@model IEnumerable<TARge21Shop.Models.Car.CarIndexViewModel>

@{
	int rowNumber = 1;
}
<div class="h1">
	Products
</div>

<div>
	<a asp-action="add" asp-controller="cars" type="submit" class="btn">Add</a>
</div>

<form method="post">
	<table class="table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Mark</th>
				<th scope="col">Type</th>
				<th scope="col">Passengers</th>
				<th scope="col">Engine Power</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var car in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@car.Mark</td>
					<td>@car.Type</td>
					<td>@car.Passangers</td>
					<td>@car.EnginePower</td>
					<td>
					<td>
						<a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
						<a asp-action="edit" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
						<a asp-action="delete" asp-controller="car" asp-route-id="@car.Id" type="submit" class="btn btn-danger">Delete</a>
					</td>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>
