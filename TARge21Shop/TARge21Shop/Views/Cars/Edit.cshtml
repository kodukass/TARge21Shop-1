@model TARge21Shop.Models.Car.CarEditViewModel

@if (Model.Id.HasValue)
{
	<h1>Update</h1>
}
else
{
	<h1>Add</h1>
}

<h1>Add</h1>

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden" />
		<input asp-for="CreatedAt" type="hidden" />
		<input asp-for="ModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Mark" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Mark" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Type" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Type" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Passangers" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Passangers" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="CargoSpace" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CargoSpace" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Mark" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Mark" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="MaintenanceCount" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MaintenanceCount" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="LastMaintenance" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastMaintenance" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="EnginePower" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="BuiltDate" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CreatedAt" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="ModifiedAt" class="form-control" />
			</div>
		</div>
		<hr/>

		@if (Model.Id.HasValue)
		{
			//<h1>Update</h1>
			<input asp-action="Update" asp-controller="cars" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			//<h1>Add</h1>
			<input asp-action="add" asp-controller="cars" type="submit" class="btn btn-primary" value="Add" />
			<a asp-action="edit" asp-controller="cars" class="btn btn-primary">Edit</a>
		}

		<!--<input asp-action="add" asp-controller="cars" type="submit" class="btn btn-primary" value="Add"/>-->
		<!--<a asp-action="edit" asp-controller="cars" class="btn btn-primary">Edit</a>-->
		<!--<input asp-action="Update" asp-controller="cars" type="submit" class="btn btn-primary" value="Update" />-->
		<a asp-action="index" class="btn btn-primary">Index</a>

	</form>
</div>