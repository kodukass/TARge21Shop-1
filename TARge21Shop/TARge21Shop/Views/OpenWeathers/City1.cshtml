@model TARge21Shop.Models.Weather.OpenWeatherViewModel

<h1>City</h1>

<div class="container">
    <h2>Forecast for the selected city</h2>
    <hr />
    <dl class="row">

        <div class="form-group row">
            <label asp-for="name" class="col-sm-2 col-form-label">City:</label>
            @Html.DisplayFor(model => model.name)
        </div>

        <div class="form-group row">
            <label asp-for="temp" class="col-sm-2 col-form-label">Temperature:</label>
            @Html.DisplayFor(model => model.temp)
        </div>

        <div class="form-group row">
            <label asp-for="feels_like" class="col-sm-2 col-form-label">Temp Feels Like:</label>
            @Html.DisplayFor(model => model.feels_like)
        </div>

        <div class="form-group row">
            <label asp-for="pressure" class="col-sm-2 col-form-label">Pressure:</label>
            @Html.DisplayFor(model => model.pressure)
        </div>

        <div class="form-group row">
            <label asp-for="humidity" class="col-sm-2 col-form-label">Humidity:</label>
            @Html.DisplayFor(model => model.humidity)
        </div>

        <div class="form-group row">
            <label asp-for="speed" class="col-sm-2 col-form-label">Wind Speed:</label>
            @Html.DisplayFor(model => model.speed)
        </div>

        <div class="form-group row">
            <label asp-for="main" class="col-sm-2 col-form-label">Weather Condition:</label>
            @Html.DisplayFor(model => model.main)
        </div>
    </dl>
</div>