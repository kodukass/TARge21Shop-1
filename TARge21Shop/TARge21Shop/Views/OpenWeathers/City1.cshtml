@model TARge21Shop.Models.Weather.OpenWeatherViewModel

<h1>City</h1>

<div class="container">
    <h2>Forecast for the selected city</h2>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Mains.Name" class="col-sm-2 col-form-label">City Name</label>
            @Html.DisplayFor(model => model.Mains.Name)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Temp" class="col-sm-2 col-form-label">Temperature</label>
            @Html.DisplayFor(model => model.Mains.Temp) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Feels_like" class="col-sm-2 col-form-label">Feels like</label>
            @Html.DisplayFor(model => model.Mains.Feels_like) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Pressure" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Mains.Pressure) Hpa
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Humidity" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Mains.Humidity) %
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Weathers[0].Main" class="col-sm-2 col-form-label">Weather</label>
            @Html.DisplayFor(model => model.Weathers[0].Main)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Winds.Speed" class="col-sm-2 col-form-label">Wind Speed</label>
            @Html.DisplayFor(model => model.Winds.Speed) km/h
        </div>
    </dl>
</div>